global:
  scrape_interval: 1m

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["{{ prometheus_web_address }}"]

  - job_name: 'elasticsearch'
  metrics_path: '/_prometheus/metrics'
  static_configs:
    - targets: ['127.0.0.1:9200']

  - job_name: 'kibana'
    metrics_path: '/api/status'
    static_configs:
      - targets: ['127.0.0.1:5601']
